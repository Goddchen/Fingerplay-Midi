<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.flat20.fingerplay"
      android:configChanges="keyboardHidden|orientation" android:versionName="0.8.1" android:versionCode="12">
	<uses-sdk android:minSdkVersion="4" />

	<uses-permission android:name="android.permission.INTERNET" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">

        <activity android:name=".FingerPlayActivity"
                  android:label="@string/app_name"
                  android:screenOrientation="landscape"
                  android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                  android:configChanges="keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name=".settings.SettingsView" android:label="Settings"
				android:screenOrientation="landscape"
                 />
<!--  android:theme="@android:style/Theme.NoTitleBar.Fullscreen" -->
    </application>
<supports-screens android:anyDensity="true" android:largeScreens="true" android:normalScreens="true" android:resizeable="true" android:smallScreens="true"></supports-screens>
</manifest> 